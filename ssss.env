# generate_secrets.py
import os
import base64

# Generate a strong encryption password (32 bytes)
encryption_password = base64.urlsafe_b64encode(os.urandom(32)).decode('utf-8')
print(f"ENCRYPTION_PASSWORD={encryption_password}")

# Generate a salt (16 bytes)
encryption_salt = base64.urlsafe_b64encode(os.urandom(16)).decode('utf-8')
print(f"ENCRYPTION_SALT={encryption_salt}")